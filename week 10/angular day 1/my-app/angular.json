{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1, //version config
  "newProjectRoot": "projects", //	Path where new projects are created through
  "projects": {
    "my-app": { //name of angular app
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src", //source code
      "prefix": "app", //used in component selectors
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts", //entry file
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json", //TypeScript config
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.css" //global styles.
            ]
          },
          "configurations": {
            "production": { //minification and hashing
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": { 
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production" //  runs if you just type ng build
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "my-app:build:production"
            },
            "development": {
              "buildTarget": "my-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": { //Runs unit tests
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.css"
            ]
          }
        }
      }
    }
  }
}
